{
  "alwaysThinkingEnabled": true,
  "enable_tool_search": true,
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "preferredModel": "sonnet",
  "maxParallelAgents": 5,
  "qualityGates": {
    "codeReviewMinScore": 80,
    "testCoverageMin": 80,
    "securityScanRequired": true
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/workflow-sessionstart-injector.js",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/unified-guard.js",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/unified-guard.js",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/definition-lint-gate.js",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read|Bash|WebFetch|WebSearch|Task",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/realtime-context-monitor.js",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-handoff-generator.js",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
